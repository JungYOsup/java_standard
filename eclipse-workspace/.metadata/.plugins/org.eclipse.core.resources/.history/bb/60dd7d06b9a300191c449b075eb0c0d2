import java.util.ArrayList;
import java.util.Arrays;
import java.util.Scanner;

public class Greedy_1541 {

	public static void main(String[] args) {

		Scanner scan = new Scanner(System.in);
		
		String value = scan.next();
		
		Greedy_1541(value);
		
		
	}
	
	public static void Greedy_1541(String value) {

		ArrayList<Character> arithmeticBox  = new ArrayList<>();
		ArrayList<Integer> numBox = new ArrayList<>();
		
		String num ="";
		
		for(int i=0; i<value.length(); i++) {
			
			char c=value.charAt(i);
			
			if(c=='+'||c=='-') {
				numBox.add(Integer.parseInt(num));
				arithmeticBox.add(c);
				num="";
				continue;
			}
			num += c;
					
		}
		numBox.add(Integer.parseInt(num));
		
		System.out.println(arithmeticBox);
		System.err.println(numBox);
		
		
	
		int index = 0;
		
		for(int i=0; i<arithmeticBox.size(); i++) {
			if(arithmeticBox.get(i)=='-') {
				index = i;
			}
		}
		System.out.println(index);
		
		arithmeticBox.add(1, '-');
		
		
//		System.out.println(arithmeticBox);
//		
//		
	}

}
